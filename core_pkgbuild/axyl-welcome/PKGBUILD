# Maintainer: Gabriel Matthews <axyl.os.linux@gmail.com>

pkgname=axyl-welcome
_destname1="usr/"
pkgver=1.0
pkgrel=1
pkgdesc="Autostart app for Axyl"
url="https://github.com/axyl-os/pkgbuild/local-packages/axyl-welcome"
arch=('any')
license=('MIT')
depends=('yad')
provides=("${pkgname}")
options=(!strip !emptydirs)

package() {
        cd ../${_destname1}
        cp -rf "local/" ${pkgdir}/${_destname1}
        cp -rf "share/" ${pkgdir}/${_destname1}
}
