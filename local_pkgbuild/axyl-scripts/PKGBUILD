# Maintainer: Gabriel Matthews <axyl.os.linux.com>

pkgname=axyl-scripts
pkgver=r4.6979d83
pkgrel=1
pkgdesc="System Scipts for Axyl OS"
arch=('any')
url="https://github.com/axyl-os/axyl-scripts"
license=('MIT')
makedepends=(git)
depends=(light xorg-xbacklight)
provides=(${pkgname})
options=(!strip !emptydirs)
source=(${pkgname}::"git+$url.git")
md5sums=('SKIP')

prepare() {
    cd "$pkgname"
    cp -af ./files/. ${srcdir}
}

package() {
    (find bin -type f -exec install Dm 755 "{}" "$pkgdir/usr/local/{}" \;)
}

pkgver() {
    cd "$pkgname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
