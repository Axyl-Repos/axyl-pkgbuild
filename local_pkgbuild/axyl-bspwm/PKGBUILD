# Maintainer: Gabriel Matthews <axyl.os.linux@gmail.com>
pkgname=axyl-bspwm
_pkgname=axyl-bspwm
_destname1="/etc/skel/.config/bspwm/"
pkgver=1.0
pkgrel=1
pkgdesc="BSPWM Configurations for Axyl OS"
arch=('x86_64')
url="https://github.com/axyl-os/"
license=('MIT')
depends=('bspwm' 'sxhkd' 'axyl-fonts' 'polybar')
makedepends=('git')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/axyl-os/${_pkgname}.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_destname1}
	cp -r ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}
}
